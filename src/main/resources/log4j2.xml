<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.stefanini.taskmanager.Application" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.operation.factory.OperationFactoryImpl"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.operation.user.CreateUser"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
         <Logger name="com.stefanini.taskmanager.operation.relation.AddTask"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.operation.relation.ShowUserTasks"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.operation.user.ShowAllUsers"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.service.impl.UserServiceImpl"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.service.impl.TaskServiceImpl"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.stefanini.taskmanager.service.impl.UserTaskServiceImpl"
                level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>